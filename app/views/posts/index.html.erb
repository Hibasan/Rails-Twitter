<header>
  <div class="post_content">
    <h2><%= link_to "ツッタカター", posts_path %></h2>
    <p><%= notice %></p>
    <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  </div>
</header>
<div class="post">
  <%= form_with(model: @post, local: true ,url: confirm_posts_path ) do |form| %>
  <%= form.label :つぶやく： %>
  <%= form.text_field :content %>
  <%= form.submit "生成"%>
  <% end %>
</div>
<%= render 'form' %>
